<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/material_design"
        >

        <TextView
            android:id="@+id/material_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Назва Матеріалу"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/red"
            />

        <ImageView
            android:id="@+id/material_image"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="200dp"
            android:layout_below="@id/material_name"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"
            />
        <TextView
            android:id="@+id/material_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/material_image"
            android:text="Категорія Матеріалу"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textColor="@color/red"/>

        <TextView
            android:id="@+id/material_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/material_category"
            android:text="Ціна Матеріалу"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textColor="@color/red"/>

        <TextView
            android:id="@+id/material_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/material_price"
            android:text="Опис Матеріалу"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:textSize="16dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/red"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>