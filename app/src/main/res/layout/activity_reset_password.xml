<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPasswordActivity"
    android:background="@color/black">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_reset_password"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/black">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_settings_reset_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Допомога при вході у систему"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_margin="10dp"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_bar_reset_password"
        android:layout_marginTop="40dp">

        <TextView
            android:id="@+id/txt_search_acc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Пошук акаунта"
            android:textColor="@color/red"
            android:textSize="25dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/txt2_search_acc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Введіть номер телефону, пов'язаний з вашим акаунтом."
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:layout_below="@id/txt_search_acc"/>

        <EditText
            android:id="@+id/phone_reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt2_search_acc"
            android:background="@drawable/input_design"
            android:hint="Номер телефону користувача"
            android:textColorHint="@color/white"
            android:inputType="phone"
            android:textSize="18dp"
            android:maxLength="12"
            android:textColor="@color/white"
            android:padding="10dp"
            android:layout_margin="20dp"
            />

        <Button
            android:id="@+id/reset_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone_reset"
            android:background="@drawable/buttons"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Підтвердити"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

    </RelativeLayout>

</RelativeLayout>