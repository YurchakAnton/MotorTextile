<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminMaintainMaterialsActivity"
    android:background="@color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">

        <RelativeLayout
            android:id="@+id/relative_image_maintain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_design"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
        <ImageView
            android:id="@+id/material_image_maintain"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="@drawable/input_design"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            />
        </RelativeLayout>

        <EditText
            android:id="@+id/material_name_maintain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative_image_maintain"
            android:hint="Назва матеріалу"
            android:inputType="textMultiLine|textCapSentences"
            android:textColorHint="@color/white"
            android:background="@drawable/input_design"
            android:padding="12dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:textSize="18dp"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/material_description_maintain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/material_name_maintain"
            android:text="Опис матеріалу"
            android:inputType="textMultiLine|textCapSentences"
            android:textColorHint="@color/white"
            android:background="@drawable/input_design"
            android:padding="12dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:textSize="18dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/material_category_maintain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/material_description_maintain"
            android:text="Категорія матеріалу"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
            android:inputType="textMultiLine|textCapSentences"
            android:textColorHint="@color/white"
            android:background="@drawable/input_design"
            android:padding="12dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:textSize="18dp"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/material_price_maintain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/material_category_maintain"
            android:inputType="numberDecimal"
            android:text="Ціна матеріалу"
            android:textColorHint="@color/white"
            android:background="@drawable/input_design"
            android:padding="12dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:textSize="18dp"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/apply_changes_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/material_price_maintain"
            android:text="Підтвердити зміни"
            android:textAlignment="center"
            android:textSize="18dp"
            android:padding="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/buttons"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/delete_material_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/apply_changes_btn"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/buttons"
            android:padding="12dp"
            android:text="Видалити матеріал"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18dp" />

    </RelativeLayout>

</RelativeLayout>